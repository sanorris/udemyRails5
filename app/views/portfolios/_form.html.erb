<%= form_with(model: @portfolio_item) do |form| %>
  <div class ="row">
    
    <div class="col-md-6">
      <div class="form-group;">
        <%= form.label :title %>
        <%= form.text_field :title, id: :portfolio_item_subtitle, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, id: :portfolio_item_subtitle, class: 'form-control' %>
      </div>

      <div class="form-group">
        <label class="btn btn-primary">
          Upload a main image file <%= form.file_field :main_image, style: 'display:none;' %>
        </label>
      </div>

      <div class="form-group">
        <label class="btn btn-primary">
          Upload a thumb image file <%= form.file_field :thumb_image, style: 'display:none;' %>
        </label>
      </div>
      
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body, id: :portfolio_item_body, class: 'form-control', rows: 13%>
      </div>
    </div>

    <div class="col-md-12">
      <h3>Technologies Used:</h3>
      <div>
        <%= form.fields_for :technologies do |technology_form| %>
          <div class="form-group">
            <%= technology_form.label :name %> 
            <%= technology_form.text_field :name %> 
          </div>
        <% end %>
      </div>

      <div class="actions">
        <%= form.submit 'Save Portfolio Item', class: 'bt btn-primary btn-block'%>
      </div>
    </div>

</div>
<% end %>